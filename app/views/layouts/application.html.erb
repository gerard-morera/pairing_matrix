<!DOCTYPE html>
<html>
<head>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <!-- <link rel="stylesheet" href="../../assets/stylesheets/application.css"> -->
  <!-- <link rel="stylesheet type="text/css" src="application.css"> -->
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-b<a href="#"></a>ar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <p class="navbar-brand"> <%= link_to 'Pairing Matrix', root_path %> </p>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
          <li class="active">
            <%= link_to 'All students', students_path %>
          <li>
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Pairing History For:
              <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <% @students.each do |student| %>
                <li>
                  <%= link_to student.name, student_partners_path(student) %>
                </li>
                <%end%>
              </ul>
            </div>
          </li>
          <li><a href="#contact">Blacklist</a></li>
        </ul>
      </div>
    </div>
  </div>

<%= yield %>

</body>
</html>
